<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondopantalla">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugadores"
        android:textSize="12pt"
        android:layout_gravity="center"
        android:paddingBottom="10pt"
        android:paddingTop="7pt"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/futbolistagrande"
        android:paddingBottom="10pt"/>

    <Button
        android:id="@+id/insertarJugador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insertar jugador"
        android:layout_marginBottom="10pt"/>

    <ListView
        android:id="@+id/listViewJugadores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:dividerHeight="15dp"/>

</LinearLayout>